<h1>Добавить товар</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название товара</label>
        <span class="helper-text" data-error="введите название товара"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required>
        <label for="price">Цена товара</label>
        <span class="helper-text" data-error="введите цену товара"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required>
        <label for="image">URL картинки товара</label>
        <span class="helper-text" data-error="введите URL картинки товара"></span>
    </div>

    <button class="btn btn-primary">Добавить товар</button>
</form>