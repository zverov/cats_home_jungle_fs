<h1>Корзина</h1>
<div id="cart">
{{#if products.length}}
<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td class="price">{{countPrice}}</td>
            <td>
                {{!-- <button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button> --}}
                <form action="/cart/delete/{{id}}" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-primary">Удалить</button>
                </form>
            </td>
        </tr>
        {{/each}}
        <tr>
            <td><strong>Всего:</strong></td>
            <td></td>
            <td class="price">{{price}}</td>
            <td></td>
        </tr>
    </tbody>
</table>
{{!-- <p>
    <strong>ВСЕГО: </strong>
    <span class="price">{{price}}</span>
</p> --}}
{{else}}
<p>Корзина пуста</p>
{{/if}}
</div>